<!doctype html>
<html lang="en">
   <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width">
      <title>{{ pageTitle }} - JS Sessions briefs</title>
      <meta name="description" content="{{ excerpt }}">

      <!-- FAVICON -->
      <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
      <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
      <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
      <link rel="manifest" href="/site.webmanifest">
      <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
      <meta name="msapplication-TileColor" content="#d9f3ff">
      <meta name="theme-color" content="#ffffff">

      <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
   </head>
   <body>
      <header class="header u-wrapper">
         <a href="{{ '/' | url }}" class="header__home-link">
            <span class="header__js-styled header__js-styled--small">JS</span> Sessions
         </a>
      </header>
      
      <main class="u-wrapper">
         <h1 class="heading--post">{{ pageTitle }}</h1>

         {{ content }}
      
         <br>
         <a href="{{ '/' | url }}" class="cta cta--post"><span class="glyph-post">&lsaquo;</span> BACK HOME</a>
      </main>

      <footer class="footer u-wrapper">
         <p class="footer__text"><a href="https://github.com/Phunkhouse/js-sessions-website" target="_blank" rel="noopener">Source code</a>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;David Krapka, 2019</p>
      </footer>

      <script>
         var isIE = /MSIE \d|Trident.*rv:/.test(navigator.userAgent);

         // Use async when it is not an IE (doesn't work properly)
         if (!isIE) {

            WebFontConfig = {
               google: {
                  families: ['Oswald|Roboto:300,500&display=swap']
               }
            };

            (function (d) {
               var wf = d.createElement('script'), s = d.scripts[0];
               wf.src = 'https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js';
               wf.async = true;
               s.parentNode.insertBefore(wf, s);
            })(document);

            // If it's IE, create normal stylesheet and avoid &amp;
         } else {

            var styleElement = document.createElement("link");
            styleElement.href = "https://fonts.googleapis.com/css?family=Oswald|Roboto:300,500&display=swap";
            styleElement.rel = "stylesheet";
            document.querySelector("body").appendChild(styleElement);

         };
      </script>
      <script src="/js/highlight.pack.js"></script>
      <script>hljs.initHighlightingOnLoad();</script>
   </body>
</html>